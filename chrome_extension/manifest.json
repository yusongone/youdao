{
"manifest_version": 2,
"name":"蛛丝马迹--记单词",
"version": "0.0.3",
"description": "轻松记录日常疑难单词，随时随地随心复习。",
"icons": 
  { 
    "16": "/images/spider.png",
    "32": "/images/spider.png",
    "48": "/images/spider.png"
  },  
"permissions":[    
    "tabs",
    "activeTab",
    "contextMenus",
    "http://*.youdao.com/",
    "http://*.makejs.com/"
    ],  
"background": {
    "scripts": ["/js/jquery-2.1.1.min.js","background.js"]
  },
"web_accessible_resources":[
      "/css/content.css"
],
"browser_action": {
    "default_icon": "/images/spider.png",
    //"default_icon": "/images/t_site_logo.png",
    "default_title": "蛛丝马迹-记单词",
    "default_popup": "popup.html"
  }
}
